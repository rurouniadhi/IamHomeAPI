    ViewBag.Title = "App";
}

<br />
<div id="bodyContainer" ng-app="IamHomeApp">
    <section id="content">
        <div class="container">
            <table ng-controller="IamHomeCtrl" ng-init="getUsers()" class="table">
                <thead>
                    <tr><th>Id<th>Name<th>Email<th>Phone Number<th>Status
                </thead>
                <tbody>
                    <tr *ngFor="let user of userlist">
                        <td>{{user.id}}</td>
                        <td>{{name}}</td>
                        <td>{{email}}</td>
                        <td>{{phonenumber}}</td>
                        <td>{{status}}</td>
                    </tr>
                </tbody>
            </table>
            <button ng-click="getUsers()">Click</button>
        </div>
    </section>
    

